<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive">
            <table>
                <tbody>
                <%= form_tag request_contact_path, method: 'post' do %>
                    <tr>
                        <div>
                        <%= label_tag :name, t('.name') %>
                        <%= text_field_tag :name, '', title: t('.enter_name'), size: 50 %></div>
                    </tr>
                    <tr>
                    <div>
                    <%= label_tag :email, t('.email') %>
                    <%= email_field_tag :email, ' ', title: t('.enter_email') %></div>
                    </tr>
                    <tr>
                        <div>
                        <%= label_tag :telephone, t('.telephone') %>
                        <%= telephone_field_tag :telephone, '', title: t('.enter_telephone') %></div>
                    </tr>
                    <tr>
                       <div> <%= label_tag :message, t('.message') %>
                        <%= text_field_tag :message, '', title: t('.enter_message'), size: 100 %></div>
                    </tr>
                    <tr>
                       <div><%= submit_tag("Contact Us")%></div>
                    </tr>
                <%end%>
                </tbody>
            </table>
        </div>
    </div>
</div>
<body>
<% flash.each do |key, value| %>
    <%= content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank? %>
        <%= yield %>
      
      
<%end%>
</body>